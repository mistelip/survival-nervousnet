<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cpcrasher.survival.MainActivity">

    <LinearLayout
        android:id="@+id/tsunami_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#88b6e6"
        android:clickable="true"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/earthquake_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/tsunami_img"
            android:layout_width="114dp"
            android:layout_height="94dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/wave" />

        <TextView
            android:id="@+id/tsunami_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:text="      Tsunami"
            android:layout_weight="0.05"
            android:textStyle="normal|bold"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/terrorist_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f1aaaa"
        android:clickable="true"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_below="@+id/tsunami_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/terrorist_img"
            android:layout_width="114dp"
            android:layout_height="94dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/bomb" />

        <TextView
            android:id="@+id/terrorist_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:text="      Terrorist attack"
            android:layout_weight="0.05"
            android:textStyle="normal|bold"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/earthquake_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#a1cc7c"
        android:orientation="horizontal"
        android:weightSum="1"
        android:clickable="true"
        tools:textAlignment="center"
        android:focusable="true"
        android:layout_marginTop="91dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/earthquake_img"
            android:layout_width="114dp"
            android:layout_height="94dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/earthquake" />

        <TextView
            android:id="@+id/earthquake_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:text="      Earthquake"
            android:layout_weight="0.05"
            android:textStyle="normal|bold"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />
    </LinearLayout>


</RelativeLayout>
